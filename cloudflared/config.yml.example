# Cloudflare Tunnel configuration
# Copy this to config.yml and fill in your tunnel ID
#
# To create a tunnel:
#   cloudflared tunnel create deepgram-dev
#   cloudflared tunnel route dns <tunnel-id> deepgram.yourdomain.com
#
# Then copy credentials:
#   cp ~/.cloudflared/<tunnel-id>.json ./cloudflared/credentials.json

tunnel: <your-tunnel-id>
credentials-file: /etc/cloudflared/credentials.json

ingress:
  # All traffic goes to Vite dev server (which proxies /api/* to backend)
  - hostname: deepgram.yourdomain.com
    service: http://host.docker.internal:5173

  # Catch-all (required)
  - service: http_status:404
